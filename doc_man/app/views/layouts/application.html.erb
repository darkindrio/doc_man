<!DOCTYPE html>
<html>
  <head>
    <title>Super Doc-Man -- Your Dank Document Manager</title>
    <link rel="shortcut icon" href='<%= asset_path("logofinal-head.png") %>'/>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <br>
    <br>
    <nav class="navbar navbar-toogleable-md navbar-fixed-top navbar-inverse">

      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>

        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav navbar-left">
            <li>
                <% if user_signed_in? %>
                  <%= link_to image_tag("logofinal.png", :width=>"130px", :height=>"35px"), documents_path, id: "logo" %>
                <% else %>
                  <%= link_to image_tag("logofinal.png", :width=>"130px", :height=>"35px"), public_documents_path, id: "logo" %>
                <% end %>
            </li>
          </ul>
          <% if user_signed_in? %>
            <%= form_tag(documents_path, method: 'get', class: 'form-inline navbar-form navbar-left') do %>
              <%= search_field_tag 'search', params[:search], class: 'form-control', placeholder: 'Search'  %>
              <%= submit_tag "Submit", class: 'btn btn-primary', :name => nil %>
            <% end %>
          <% else %>
            <%= form_tag(public_documents_path, method: 'get', class: 'form-inline navbar-form navbar-left') do %>
              <%= search_field_tag 'search', params[:search], class: 'form-control', placeholder: 'Search'  %>
              <%= submit_tag "Submit", class: 'btn btn-default', :name => nil %>
            <% end %>
          <% end %>
            <nav>
                <ul class="nav navbar-nav navbar-right">
                    <% if user_signed_in? %>
                        <li>
                            <%= link_to documents_path do %>
                              <span class="fa fa-book" style="color:white"></span>
                              Browse Documents
                            <% end %>
                        </li>
                        <li>
                            <%= link_to my_documents_path do %>
                              <span class="fa fa-book" style="color:white"></span>
                              My Documents
                            <% end %>
                        </li>
                        <li>
                            <%= link_to categories_path do %>
                              <span class="fa fa-tags" style="color:white"></span>
                              Categories
                            <% end %>
                        </li>
                        <li>
                            <%= link_to new_user_registration_path do %>
                              <span class="fa fa-user-plus" style="color:white"></span>
                              New User
                            <% end %>
                        </li>
                        <li>
                            <%= link_to(destroy_user_session_path, :method => :delete) do %>
                              <span class="fa fa-sign-out" style="color:white"></span>
                              Logout
                            <% end %>
                        </li>
                    <%else %>
                        <li>
                            <%= link_to public_documents_path do %>
                              <span class="fa fa-book" style="color:white"></span>
                              Browse Documents
                            <% end %>
                        </li>
                        <li>
                            <%= link_to new_user_session_path do %>
                              <span class="fa fa-sign-out" style="color:white"></span>
                              Sign In
                            <% end %>
                        </li>
                    <% end %>
                </ul>
            </nav>
        </div>
      </nav>
    </div>
    <div class="container" style='margin-top:60px'>
      <% if not notice.nil? %>
        <div class="alert alert-success" role="alert"><%= notice %><a class="close" data-dismiss="alert" href="#">&times;</a></div>
      <% end %>
      <% if not alert.nil? %>
        <div class="alert alert-danger" role="alert"><%= alert %><a class="close" data-dismiss="alert" href="#">&times;</a></div>
      <% end %>
      <%= yield %>
    </div>
  </body>
</html>
