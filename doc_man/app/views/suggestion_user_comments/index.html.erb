<p id="notice"><%= notice %></p>

<h1>Suggestion User Comments</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Suggestion</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @suggestion_user_comments.each do |suggestion_user_comment| %>
      <tr>
        <td><%= suggestion_user_comment.user %></td>
        <td><%= suggestion_user_comment.suggestion %></td>
        <td><%= suggestion_user_comment.comment %></td>
        <td><%= link_to 'Show', suggestion_user_comment %></td>
        <td><%= link_to 'Edit', edit_suggestion_user_comment_path(suggestion_user_comment) %></td>
        <td><%= link_to 'Destroy', suggestion_user_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

