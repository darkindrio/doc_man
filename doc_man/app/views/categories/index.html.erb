<div class="panel panel-default">
  <div class="panel-heading">
    <h1>Categories</h1>
  </div>
  <table class='table'>
    <thead>
      <tr>
        <th>Title</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @categories.each do |category| %>
        <tr>
          <td><%= category.title %></td>
          <td><%= link_to 'Show', category, class: "btn btn-info", style: "color:white" %></td>
          <td><%= link_to 'Edit', edit_category_path(category), class: "btn btn-primary", style: "color:white" %></td>
          <td><%= link_to 'Destroy', category, class: "btn btn-danger", style: "color:white",method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

<%= link_to 'New Category', new_category_path, class: "btn btn-primary", style: "color:white" %>
